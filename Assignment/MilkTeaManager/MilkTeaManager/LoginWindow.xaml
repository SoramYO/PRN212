<Window x:Class="MilkTeaManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilkTeaManager"
        mc:Ignorable="d"
         Height="450" Width="800">
    <Grid>
        <Label Content="username" HorizontalAlignment="Left" Margin="185,152,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="185,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" Margin="0,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" Height="26"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="272,258,0,0" VerticalAlignment="Top" Height="26" Width="69" Click="LoginButton_Click"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Margin="422,258,0,0" VerticalAlignment="Top" Height="26" Width="82" Click="QuitButton_Click"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="256"/>

    </Grid>
</Window>
