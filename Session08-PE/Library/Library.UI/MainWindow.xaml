        <TextBox x:Name="CategoryTextBox" HorizontalAlignment="Left" Margin="540,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Height="37"/>
        <Label Content="Book Name" HorizontalAlignment="Left" Margin="157,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Category Id" HorizontalAlignment="Left" Margin="463,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.61"/>
